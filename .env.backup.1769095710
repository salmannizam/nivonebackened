# ============================================
# NivaasOne Backend - Environment Variables
# ============================================
# Dummy values for development/testing
# Replace with actual values for production

# Application Configuration
APP_MODE=SAAS
PORT=3001
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/nivaasone
MONGODB_DB_NAME=nivaasone

# JWT Authentication
JWT_SECRET=dummy-jwt-secret-key-change-in-production-12345
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dummy-refresh-secret-key-change-in-production-12345
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
# For Development: Set USE_REDIS_SENTINEL=false and use direct connection
# For Production: Set USE_REDIS_SENTINEL=true and use Sentinel

# Redis Direct Connection (Development)
USE_REDIS_SENTINEL=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Sentinel (Production) - Uncomment and configure when USE_REDIS_SENTINEL=true
USE_REDIS_SENTINEL=true
REDIS_SENTINEL_HOSTS=10.50.0.229:26380,10.50.0.176:26380,10.50.0.143:26380
REDIS_SENTINEL_NAME=redis-6385
REDIS_PASSWORD=devredis@820
SENTINEL_PASSWORD=devredis@820
REDIS_DB=0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=dummy-email@gmail.com
MAIL_PASSWORD=dummy-app-password-12345
MAIL_SECURE=true
MAIL_FROM=noreply@dummydomain.com

# SMS Configuration (DLT-compliant)
SMS_API_KEY=dummy-sms-api-key-12345
SMS_API_URL=https://api.textlocal.in/send/
SMS_SENDER_ID=FWMSPL
DLT_TEMPLATE_ID=
TM_ID=
DLT_HEADER_ID=
DLT_ENTITY_ID=

# Self-Hosted Mode (Only when APP_MODE=SELF_HOSTED)
SELF_HOSTED_TENANT_NAME=Default Organization
SELF_HOSTED_TENANT_SLUG=default

# Super Admin (Only when APP_MODE=SAAS)
SUPER_ADMIN_EMAIL=admin@platform.com
SUPER_ADMIN_PASSWORD=superadmin123
SUPER_ADMIN_NAME=Platform Administrator

# CORS Configuration - Allow all subdomains of nivaasone.com
ALLOWED_DOMAIN=nivaasone.com
