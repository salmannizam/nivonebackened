# ============================================
# NivaasOne Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

APP_MODE=SAAS
PORT=3001
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

MONGODB_URI=mongodb://localhost:27017/nivaasone
MONGODB_DB_NAME=nivaasone

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
# For Development: Set USE_REDIS_SENTINEL=false and use direct connection
# For Production: Set USE_REDIS_SENTINEL=true and use Sentinel

# Redis Direct Connection (Development)
USE_REDIS_SENTINEL=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Sentinel (Production) - Configure when USE_REDIS_SENTINEL=true
# USE_REDIS_SENTINEL=true
# Comma-separated list of Sentinel hosts (host:port)
# Primary: REDIS_SENTINEL_HOSTS (alternative: REDIS_SENTINELS)
# REDIS_SENTINEL_HOSTS=10.50.0.229:26380,10.50.0.176:26380,10.50.0.143:26380
# Sentinel master name
# Primary: REDIS_SENTINEL_NAME (alternative: REDIS_MASTER_NAME, default: mymaster)
# REDIS_SENTINEL_NAME=redis-6385
# Redis server password (for connecting to Redis master/replicas)
# REDIS_PASSWORD=devredis@820
# Sentinel authentication password (for connecting to Sentinel instances)
# Primary: SENTINEL_PASSWORD (alternative: SENTINEL_PASSRD for typo variant)
# SENTINEL_PASSWORD=devredis@820
# REDIS_DB=0

# CORS Configuration
# CORS_ORIGIN: Comma-separated list of allowed origins, or '*' for all
# Examples: 
#   - Single origin: http://localhost:3000
#   - Multiple origins: http://localhost:3000,https://app.nivaasone.com
#   - All origins: *
CORS_ORIGIN=http://localhost:3000

# ALLOWED_DOMAIN: Allow all subdomains of this domain (e.g., nivaasone.com)
# This allows: *.nivaasone.com (tenant1.nivaasone.com, tenant2.nivaasone.com, etc.)
# Leave empty to disable subdomain wildcard matching
ALLOWED_DOMAIN=nivaasone.com

MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_SECURE=true
MAIL_FROM=noreply@yourdomain.com

SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.textlocal.in/send/
SMS_SENDER_ID=FWMSPL
DLT_TEMPLATE_ID=
TM_ID=
DLT_HEADER_ID=
DLT_ENTITY_ID=

SELF_HOSTED_TENANT_NAME=Default Organization
SELF_HOSTED_TENANT_SLUG=default

SUPER_ADMIN_EMAIL=admin@platform.com
SUPER_ADMIN_PASSWORD=superadmin123
SUPER_ADMIN_NAME=Platform Administrator
